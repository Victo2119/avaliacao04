<script>
function enviarFormulario(event) {
    event.preventDefault();

    const nome = document.getElementById('nome').value.trim();
    const email = document.getElementById('email').value.trim();
    const estudante = document.getElementById('estudante').value.trim();
    const descricao = document.getElementById('descricao').value.trim();
    const mensagem = document.getElementById('mensagem');
    const spanNome = document.getElementById('nomeUsuario');

    if(!nome || !email || !estudante || !descricao){
        alert("Por favor, preencha todos os campos antes de enviar!");
        return;
    }

    spanNome.textContent = nome;
    mensagem.style.display = 'block';
    mensagem.style.opacity = 0;

    let opacity = 0;
    const fadeIn = setInterval(() => {
        if(opacity < 1){
            opacity += 0.05;
            mensagem.style.opacity = opacity;
        } else {
            clearInterval(fadeIn);
        }
    }, 20);

    setTimeout(() => {
        let fadeOutOpacity = 1;
        const fadeOut = setInterval(() => {
            if(fadeOutOpacity > 0){
                fadeOutOpacity -= 0.05;
                mensagem.style.opacity = fadeOutOpacity;
            } else {
                clearInterval(fadeOut);
                mensagem.style.display = 'none';
            }
        }, 20);
    }, 4000);
}
</script>

